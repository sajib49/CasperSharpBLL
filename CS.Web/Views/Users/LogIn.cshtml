@model CS.Model.User

@{
    ViewBag.Title = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body style="background-color: #46BFE7;">
<h2>Log In</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true)

            <div class="form-group">
                @Html.LabelFor(model => model.UserName, new {@class = "control-label col-md-2"})
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.UserName, new {required = "", @class = "form-control", autocomplete = "off", placeholder = "User Name"})
                    @Html.ValidationMessageFor(model => model.UserName)
                    @Html.ValidationMessage("LoginFaild", new {id = "lblLoginfaildUserName", @class = "text-danger"})
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Password, new {@class = "control-label col-md-2"})
                <div class="col-md-10">
                    @Html.PasswordFor(model => model.Password, new {required = "", @class = "form-control", autocomplete = "off", placeholder = "Password"})
                    @Html.ValidationMessageFor(model => model.Password)
                    @Html.ValidationMessage("LoginFaild", new {id = "lblLoginfaildUserPassword", @class = "text-danger"})
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-success">
                        <span class=" glyphicon glyphicon-log-in"></span>
                        Login
                    </button>
                </div>
            </div>
        </div>
    }
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script>
        $(document).ready(function () {
            var loginfaildUserName = $("#lblLoginfaildUserName").text();
            var loginfaildUserPassword = $("#lblLoginfaildUserPassword").text();

            if (loginfaildUserName !== "") {
                $("#UserName").focus(function () {
                    $("#lblLoginfaildUserName").fadeOut(1000);
                });
            }
            if (loginfaildUserPassword !== "") {
                $("#Password").focus(function () {
                    $("#lblLoginfaildUserPassword").fadeOut(1000);
                });
            }
        });
    </script>

</body>
</html>

